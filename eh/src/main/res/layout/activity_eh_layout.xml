<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/activity_eh_color_primary"
	android:orientation="vertical">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/activity_eh_color_primary"
			android:orientation="vertical"
			android:padding="@dimen/activity_eh_layout_padding">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/activity_eh_color_accent"
				android:orientation="vertical"
				android:padding="@dimen/activity_eh_highlight_margin">

				<TextView
					android:id="@+id/activity_eh_layout_details_text_view"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/activity_eh_color_primary"
					android:gravity="center"
					android:padding="@dimen/activity_eh_view_padding"
					android:text="@string/activity_eh_crash_message"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:textColor="@color/activity_eh_text_color"
					android:typeface="monospace" />
			</LinearLayout>

			<Button
				android:id="@+id/activity_eh_layout_send_to_developer"
				style="?android:attr/buttonBarButtonStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="end"
				android:layout_margin="@dimen/activity_eh_layout_padding"
				android:onClick="onSendErrorLogClick"
				android:text="@string/activity_eh_send_to_developers"
				android:textColor="@color/activity_eh_color_accent"
				android:typeface="monospace" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/activity_eh_layout_padding"
				android:gravity="center"
				android:padding="@dimen/activity_eh_view_padding"
				android:shadowColor="@color/activity_eh_color_accent"
				android:shadowDx="1.0"
				android:shadowDy="1.0"
				android:shadowRadius="1.0"
				android:singleLine="true"
				android:text="@string/activity_eh_title_0"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="@color/activity_eh_text_color"
				android:textStyle="bold"
				android:typeface="monospace" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/activity_eh_color_accent"
				android:orientation="vertical"
				android:padding="@dimen/activity_eh_highlight_margin">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/activity_eh_color_primary"
					android:orientation="vertical"
					android:padding="@dimen/activity_eh_view_padding">

					<HorizontalScrollView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

						<TextView
							android:id="@+id/activity_eh_layout_details_text_view_0"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="start"
							android:minHeight="@dimen/activity_eh_layout_details_min_height"
							android:padding="@dimen/activity_eh_view_padding"
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:textColor="@color/activity_eh_meta_inf_color"
							android:textIsSelectable="true"
							android:typeface="monospace" />
					</HorizontalScrollView>
				</LinearLayout>
			</LinearLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/activity_eh_layout_padding"
				android:gravity="center"
				android:padding="@dimen/activity_eh_view_padding"
				android:shadowColor="@color/activity_eh_color_accent"
				android:shadowDx="1.0"
				android:shadowDy="1.0"
				android:shadowRadius="1.0"
				android:singleLine="true"
				android:text="@string/activity_eh_title_1"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="@color/activity_eh_text_color"
				android:textStyle="bold"
				android:typeface="monospace" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/activity_eh_color_accent"
				android:orientation="vertical"
				android:padding="@dimen/activity_eh_highlight_margin">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/activity_eh_color_primary"
					android:orientation="vertical"
					android:padding="@dimen/activity_eh_view_padding">

					<HorizontalScrollView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

						<TextView
							android:id="@+id/activity_eh_layout_details_text_view_1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="start"
							android:minHeight="@dimen/activity_eh_layout_details_min_height"
							android:padding="@dimen/activity_eh_view_padding"
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:textColor="@color/activity_eh_activity_log_color"
							android:textIsSelectable="true"
							android:typeface="monospace" />
					</HorizontalScrollView>
				</LinearLayout>
			</LinearLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/activity_eh_layout_padding"
				android:gravity="center"
				android:padding="@dimen/activity_eh_view_padding"
				android:shadowColor="@color/activity_eh_color_accent"
				android:shadowDx="1.0"
				android:shadowDy="1.0"
				android:shadowRadius="1.0"
				android:singleLine="true"
				android:text="@string/activity_eh_title_2"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="@color/activity_eh_text_color"
				android:textStyle="bold"
				android:typeface="monospace" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/activity_eh_color_accent"
				android:orientation="vertical"
				android:padding="@dimen/activity_eh_highlight_margin">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/activity_eh_color_primary"
					android:orientation="vertical"
					android:padding="@dimen/activity_eh_view_padding">

					<HorizontalScrollView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

						<TextView
							android:id="@+id/activity_eh_layout_details_text_view_2"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="start"
							android:minHeight="@dimen/activity_eh_layout_details_min_height"
							android:padding="@dimen/activity_eh_view_padding"
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:textColor="@color/activity_eh_stack_color"
							android:textIsSelectable="true"
							android:typeface="monospace" />
					</HorizontalScrollView>
				</LinearLayout>
			</LinearLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:padding="@dimen/activity_eh_view_padding"
				android:text="@string/activity_eh_copyright_message"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:typeface="monospace" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>
